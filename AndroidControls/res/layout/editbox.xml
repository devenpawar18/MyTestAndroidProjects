<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="89dip">


	<RelativeLayout android:orientation="horizontal"
		android:layout_centerVertical="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_margin="10dip">
		
		<TextView android:id="@+id/editTitle" android:layout_width="wrap_content"
			android:textColor="@color/black" android:layout_height="wrap_content"
			android:gravity="center_vertical" android:textStyle="bold"
			android:textSize="14sp" />


		<EditText android:id="@+id/tv_viuName_value"
			android:editable="true" android:gravity="right|center"
			android:inputType="text" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:clickable="true"
			android:singleLine="true" android:textColor="@color/black" android:text="EDIT BOX"
			android:layout_alignParentRight="true" android:layout_gravity="right|center_vertical"
			android:textSize="16dip" android:layout_marginRight="10dip" />




	</RelativeLayout>
	<View android:id="@+id/divider" android:layout_width="fill_parent"
		android:layout_height="1dip" android:background="@color/title_gray"
		android:layout_alignParentBottom="true" />
</RelativeLayout>