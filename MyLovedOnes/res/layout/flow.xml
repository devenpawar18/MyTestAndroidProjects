<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/l1" android:layout_gravity="center"
	android:layout_height="fill_parent" android:background="#D3D3D3">
	<com.mylovedones.CFlow android:id="@+id/cf"
		android:background="#333333" android:layout_width="fill_parent"
		android:layout_height="200dip" />

	<TextView android:layout_height="15dip" android:id="@+id/tv1"
		android:layout_width="fill_parent" android:background="#FF4500" />


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ScrollView android:layout_width="fill_parent"
			android:foregroundGravity="right" android:layout_height="fill_parent">
			<RelativeLayout android:id="@+id/r1"
				android:background="#D3D3D3" android:layout_width="fill_parent"
				android:layout_height="fill_parent">

				<TextView android:id="@+id/name" android:layout_width="fill_parent"
					android:paddingLeft="10dip" android:gravity="center"
					android:layout_height="wrap_content" android:paddingTop="5dip"
					android:textSize="20dip" android:text="Open for Business"
					android:textColor="#000000" />
				<TextView android:id="@+id/nickName" android:layout_height="wrap_content"
					android:padding="10dip" android:layout_below="@+id/name"
					android:layout_width="fill_parent" android:textColor="#CD5C5C"
					android:text="Nick Name :" />
				<!--
					<RelativeLayout android:id="@+id/r1"
					android:layout_marginTop="20dip"
					android:layout_below="@+id/nickName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">
				-->
				<TextView android:id="@+id/residence"
					android:layout_height="wrap_content" android:paddingLeft="10dip"
					android:layout_width="wrap_content" android:textColor="#000000"
					android:layout_below="@+id/nickName" android:text="Residence :" />
				<ImageView android:id="@+id/birthday"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/cake" android:layout_alignParentRight="true"
					android:layout_below="@+id/nickName" android:layout_marginRight="10dip" />
				<!--				</RelativeLayout>-->
				<TextView android:id="@+id/company" android:layout_height="wrap_content"
					android:paddingLeft="10dip" android:layout_width="wrap_content"
					android:textColor="#000000" android:layout_below="@+id/residence"
					android:text="Company :" />
				<TextView android:id="@+id/phone" android:layout_width="fill_parent"
					android:paddingLeft="10dip" android:layout_below="@+id/company"
					android:layout_height="wrap_content" android:text="Open for Business"
					android:textColor="#000000" />

				<!--
					<TextView android:id="@+id/birthday"
					android:layout_width="fill_parent" android:paddingLeft="10dip"
					android:layout_below="@+id/phone"
					android:layout_height="wrap_content" android:text="Birthday"
					android:textStyle="bold" android:textColor="#000000" />
				-->
				<Button android:id="@+id/gallery" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Gallery"
					android:layout_marginTop="15dip" android:layout_centerHorizontal="true"
					android:layout_below="@+id/phone" />



			</RelativeLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>