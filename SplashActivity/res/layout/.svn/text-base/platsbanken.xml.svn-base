<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/white" android:orientation="vertical">

	<include layout="@layout/title" android:id="@+id/titleBar" />

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/background">

		<TextView android:id="@+id/titleText" android:layout_width="fill_parent"
			android:textSize="16dip" android:textStyle="bold" android:gravity="center"
			android:layout_centerHorizontal="true" android:textColor="@drawable/white"
			android:layout_height="44dip" />

		<TextView android:id="@+id/freesTextButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="30dip" android:text="@string/text_Search"
			android:textSize="16dip" android:gravity="left|center"
			android:layout_centerHorizontal="true" android:textStyle="bold"
			android:paddingLeft="8dip" android:background="@layout/top_image_selector"
			android:textColor="@layout/item_text_selector"
			android:layout_below="@+id/titleText" />
		<TextView android:id="@+id/workPlaceButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/search_By_Job_Location" android:textSize="16dip"
			android:gravity="left|center" android:layout_centerHorizontal="true"
			android:textStyle="bold" android:paddingLeft="8dip"
			android:textColor="@layout/item_text_selector"
			android:background="@layout/middle_image_selector" 
			android:layout_below="@+id/freesTextButton" />
		<TextView android:id="@+id/categoryButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textStyle="bold" android:text="@string/search_By_Occupation"
			android:textSize="16dip" android:gravity="left|center"
			android:textColor="@layout/item_text_selector"
			android:layout_centerHorizontal="true" android:background="@layout/bottom_image_selector"
			android:paddingLeft="8dip"
			android:layout_below="@+id/workPlaceButton" />

	</RelativeLayout>
</LinearLayout>
