<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/white" android:orientation="vertical">
	<include layout="@layout/title" android:id="@+id/titleBar" />
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_margin="10dip">
		<TableRow android:id="@+id/top_divider" android:layout_width="fill_parent"
			android:layout_height="44dip" android:background="@drawable/white">
			<View android:id="@+id/divider" android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/contactBorderColor"
				android:layout_weight="1" />
		</TableRow>
		<TableRow android:id="@+id/placeLayout" android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="44dip"
			android:weightSum="100" android:background="@layout/list_selector">
			<View android:id="@+id/left_divider" android:layout_width="1dip"
				android:layout_height="44dip" android:background="@drawable/contactBorderColor" />
			<TextView android:id="@+id/place" android:layout_width="0dip"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:singleLine="true" android:gravity="center_vertical"
				android:layout_weight="40" android:layout_gravity="center_vertical"
				android:textColor="@layout/list_text_selector" android:textSize="15dip"
				android:text="@string/job_Location" android:layout_marginLeft="6dip" 
				/>
			<TextView android:id="@+id/placeValue" android:layout_width="0dip"
				android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="6dip"
				android:layout_weight="60" android:layout_gravity="center_vertical"
				android:textStyle="bold" android:gravity="center_vertical|right"
				android:textColor="@layout/list_value_text_selector" android:textSize="12dip" 
				/>
			<View android:id="@+id/right_divider" android:layout_width="1dip"
				android:layout_height="44dip" android:background="@drawable/contactBorderColor" />
		</TableRow>
		<TableRow android:id="@+id/middle_divider"
			android:layout_width="fill_parent" android:layout_height="44dip"
			android:background="@drawable/white">
			<View android:id="@+id/divider" android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/contactBorderColor"
				android:layout_weight="1" />
		</TableRow>
		<TableRow android:id="@+id/professionLayout"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="44dip" android:weightSum="100"
			android:background="@layout/list_selector">
			<View android:id="@+id/left_divider" android:layout_width="1dip"
				android:layout_height="44dip" android:background="@drawable/contactBorderColor" />
			<TextView android:id="@+id/profession" android:layout_width="0dip"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:singleLine="true" android:layout_weight="40"
				android:gravity="center_vertical" android:layout_gravity="center_vertical"
				android:textColor="@layout/list_text_selector" android:textSize="15dip"
				android:text="@string/occupation" android:layout_marginLeft="6dip" 
				/>
			<TextView android:id="@+id/professionValue"
				android:layout_width="0dip" android:layout_height="wrap_content"
				android:singleLine="true" android:layout_weight="60" android:layout_marginRight="6dip"
				android:layout_gravity="center_vertical" android:textStyle="bold"
				android:gravity="center_vertical|right" android:textColor="@layout/list_value_text_selector"
				android:textSize="12dip" />
			<View android:id="@+id/right_divider" android:layout_width="1dip"
				android:layout_height="44dip" android:background="@drawable/contactBorderColor" />
		</TableRow>
		<TableRow android:id="@+id/bottom_divider"
			android:layout_width="fill_parent" android:layout_height="44dip"
			android:background="@drawable/white">
			<View android:id="@+id/divider" android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/contactBorderColor"
				android:layout_weight="1" />
		</TableRow>
	</TableLayout>
</LinearLayout>
