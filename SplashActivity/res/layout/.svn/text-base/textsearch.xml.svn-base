<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/white">
	<include layout="@layout/title" android:id="@+id/titleBar" />
	<RelativeLayout android:layout_width="wrap_content"
		android:id="@+id/searchLayout" android:layout_height="wrap_content">
		<EditText android:id="@+id/serchText" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:hint="@string/enter_Your_Search_Terms"
			android:imeOptions="actionDone" android:singleLine="true"/>
	</RelativeLayout>
	<ListView android:id="@+id/itemList" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:cacheColorHint="#00000000" />
	<TextView android:id="@+id/emptyText" android:layout_width="fill_parent"
		android:layout_height="40dip" 
		android:visibility="invisible" />
</LinearLayout>
